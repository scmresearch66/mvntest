node {
  checkout scm

  env.PATH = "/usr/local/bin:${env.PATH}"

  stage('Build site') {
    sh 'id';
    sh 'echo $PATH';
    sh 'type docker';
    sh 'docker ps';
  }

  stage('Inside Docker') {
    timeout(60) {
      docker.image("centos:6.7").inside() {
        sh 'for i in `seq 1 50`; do echo $i;date;sleep 2;done'
      }
    }
  }
}
