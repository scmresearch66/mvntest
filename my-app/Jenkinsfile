node("master") {
  checkout scm

  version = '1.0-SNAPSHOT'

  stage('Build site') {
    sh 'cd my-app && ./gradlew build'

    println "my-app/target/my-app-${version}.jar"
    archiveArtifacts artifacts: "my-app/target/*.jar", fingerprint: false
  }

  stage("Confirm") {
    input id: 'ID', message: 'Continue?', ok: 'Yes'
  }
}
